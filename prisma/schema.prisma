generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PetType {
  CAT
  DOG
}

enum PetAge {
  OFFSPRING
  ADULT
  SENIOR
}

enum PetSize {
  SMALL
  MEDIUM
  LARGE
}

enum PetEnergy {
  VERY_LOW // 1 - Muito baixa
  LOW // 2 - Baixa  
  MODERATE // 3 - Moderada
  HIGH // 4 - Alta
  VERY_HIGH // 5 - Muito alta
}

model Org {
  id            String @id @default(uuid())
  name          String
  email         String @unique
  address       String
  phone         String
  password_hash String

  pets Pet[]

  @@map("orgs")
}

model Pet {
  id          String    @id @default(uuid())
  name        String
  type        PetType
  age         PetAge
  size        PetSize
  energy      PetEnergy
  description String

  org_id String
  Org    Org    @relation(fields: [org_id], references: [id])

  @@map("pets")
}
